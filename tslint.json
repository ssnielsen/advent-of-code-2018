{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "object-literal-sort-keys": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-pascal-case",
                "allow-leading-underscore"
            ]
        },
        "max-classes-per-file": false,
        "max-line-length": false,
        "no-consecutive-blank-lines": [true, 2],
        "arrow-parens": false,
        "one-line": {
            "options": [
                "check-open-brace",
                "check-whitespace"
            ]
        },
        "interface-name": false,
        "ordered-imports": false,
        "quotemark": [true, "single", "jsx-double"],
        "no-shadowed-variable": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                  "objects": "always",
                  "arrays": "always",
                  "functions": "always",
                  "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
